@model IS.ViewModels.AllApplicationsViewModel
@{
    ViewBag.Title = "Приложения";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <p><b>Приложения, зарегистрированные в системе</b></p>
            </div>

            <div class="panel-body" style="padding:0;">
                <table class="table table-striped table-bordered" style="margin:0;">
                    <tr class="info">
                        <th>ID</th>
                        <th>Name</th>
                        <th>Address</th>
                    </tr>
                    @foreach (var application in Model.Applications)
                    {
                        <tr>
                            <th>@Html.Encode(application.Id)</th>
                            <th>@Html.Encode(application.Name)</th>
                            <th>@Html.Encode(application.Uri)</th>
                        </tr>
                    }
                </table>
            </div>
        </div>


    </div>
</div>
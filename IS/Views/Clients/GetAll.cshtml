@model IS.ViewModels.AllApplicationsViewModel
@{
    ViewBag.Title = "Приложения";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <p class="col-md-10"><b>Приложения, зарегистрированные в системе</b></p>
                @Html.ActionLink("Создать", "Add", null, new { @class = "btn btn-default"})
            </div>

            <div class="panel-body" style="padding:0;">
                <table class="table table-striped table-bordered" style="margin:0;">
                    <tr class="info">
                        <th>ID</th>
                        <th>Name</th>
                        <th>Address</th>
                    </tr>
                    @foreach (var client in Model.Applications)
                    {
                        <tr >
                            <td>
                                <a href="@Url.Action("Edit", new { id = client.Id})">
                                    <div style="height:100%;width:100%">
                                        @Html.Encode(client.Id)
                                    </div>
                                </a>
                            </td>
                            <td>@Html.Encode(client.Name)</td>
                            <td>@Html.Encode(client.Uri)</td>
                        </tr>
                    }
                </table>
            </div>
        </div>


    </div>
</div>
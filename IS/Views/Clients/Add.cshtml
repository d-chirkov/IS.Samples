@model IS.ViewModels.NewClientViewModel

@{
    ViewBag.Title = "Новый клиент";
}

<div class="row">
@using (Html.BeginForm())
{
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <p class="col-md-10"><b>Новый клиент</b></p>
                @Html.ActionLink("Назад", null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-default"})
            </div>
            <div class="panel-body">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", style = "max-width: 95%" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", style = "max-width: 95%" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Secret, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.Secret, new { @class = "form-control", style = "max-width: 95%" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Uri, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Uri, new { htmlAttributes = new { @class = "form-control", style = "max-width: 95%" } })
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer" style="height:55px !important">
                <input type="submit" value="Создать" class="btn btn-default pull-right"/>
            </div>
        </div>
    </div>
     }
</div>


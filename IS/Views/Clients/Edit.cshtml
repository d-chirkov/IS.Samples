@model IS.ViewModels.EditClientViewModel

@{
    ViewBag.Title = "Редактирование";
}

<div class="row">
    @using (Html.BeginForm())
    {
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <p class="col-md-10"><b>Клиент @Html.Encode(Model.Id)</b></p>
                    @Html.ActionLink("Назад", null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-default" })
                </div>
                <div class="panel-body">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <div class="form-horizontal">
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", style = "max-width: 95%" } })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Secret, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.PasswordFor(model => model.Secret, new { @class = "form-control", style = "max-width: 95%" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Uri, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Uri, new { htmlAttributes = new { @class = "form-control", style = "max-width: 95%" } })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer" style="height:55px !important">
                    <div class="col-md-offset-7 col-md-2">
                        @Html.ActionLink("Удалить", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger" })
                    </div>
                    <div class="col-md-2">
                        <input type="submit" value="Сохранить" class="btn btn-default" />

                    </div>
                </div>
            </div>
        </div>
    }
</div>
